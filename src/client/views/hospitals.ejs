                        <p class="degree2">100 beds</p>
                        <i class="fas fa-stethoscope"></i>
                        <p class="experience">Famous Treatments</p> 
                        <div class="hospital-services">
                            <div class="service">Multi Organ Transplant</div>
                            <div class="service">Orthopedic Surgery</div>
                            <div class="service">Infertility Treatment</div>
                            <div class="service">Dentistry</div>
