<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="reset.css">
    <link rel="stylesheet" href="stylesheet.css">
    <link rel="stylesheet" href="login.css">
    <title>Login</title>
</head>
<body>
    <div class="display-flex">
    <%- include header.ejs %>
    <% if( err.length > 0 ) { %>
    <div class="failure-message" id="failure-message">
        <div><img src="exit.svg" alt=""></div>
        <div>
            <h3>Failure</h3>
            <p><%= err %></p>
        </div>
        <div id="close"><img src="exit.svg" ></div>
    </div>
    <% } %>
        <div class="contact-form">
            <h3>Email Login</h3>
            <hr>
            <form method="POST" action="/login">
                <div class="input-box ">
                    <input type="email" name="email" id="email" placeholder="Enter Email Address">
                </div>
                <div class="input-box mobile">
                    <input type="password" name="password" id="password" placeholder="Enter password">
                    <i class="fas fa-eye-slash" id="password-hidden"></i>
                    <i class="fas fa-eye" id="password-visible" style="display: none;"></i>
                </div>
                <div class="options">
                    <a href="/otp-login"><div>Login with OTP</div></a>
                    <a href="/otp_password_number"><div>Forgot password</div></a>
                </div>
                <div class="btn">
                    <button type="submit">LOGIN<i class="fas fa-arrow-right"></i></button>
                </div>
                
            </form>
           
            <div class="signup-option">Not registered? <a href="/signup">Sign Up</a></div>
        </div>
        <footer class="copyright">
            <div>
                All Rights Reserved &copy; tvastra 2018
            </div>
        </footer>
        
    </div>
    <script src="toggle-password.js"></script>
    <script>
        var cross=document.getElementById("close");
        var box=document.getElementById("failure-message");
        cross.addEventListener("click", function(){
            box.style.display="none";
        });
    </script>
</body>
</html>

